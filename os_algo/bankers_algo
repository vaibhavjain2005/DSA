#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

int main() {
    int n, m; // n = number of processes, m = number of resources
    int i, j, k;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter the number of resource types: ");
    scanf("%d", &m);

    // Dynamically allocate memory for matrices
    int **alloc = (int **)malloc(n * sizeof(int *));
    int **max = (int **)malloc(n * sizeof(int *));
    int **need = (int **)malloc(n * sizeof(int *));
    for (i = 0; i < n; i++) {
        alloc[i] = (int *)malloc(m * sizeof(int));
        max[i] = (int *)malloc(m * sizeof(int));
        need[i] = (int *)malloc(m * sizeof(int));
    }

    int *avail = (int *)malloc(m * sizeof(int));
    int *finish = (int *)malloc(n * sizeof(int));
    int *safeSeq = (int *)malloc(n * sizeof(int));

    printf("\nEnter the Allocation Matrix (%d x %d):\n", n, m);
    for (i = 0; i < n; i++)
        for (j = 0; j < m; j++)
            scanf("%d", &alloc[i][j]);

    printf("\nEnter the Maximum Matrix (%d x %d):\n", n, m);
    for (i = 0; i < n; i++)
        for (j = 0; j < m; j++)
            scanf("%d", &max[i][j]);

    printf("\nEnter the Available Resources (%d values):\n", m);
    for (i = 0; i < m; i++)
        scanf("%d", &avail[i]);

    // Calculate Need Matrix
    for (i = 0; i < n; i++)
        for (j = 0; j < m; j++)
            need[i][j] = max[i][j] - alloc[i][j];

    printf("\nNeed Matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < m; j++)
            printf("%d ", need[i][j]);
        printf("\n");
    }

    // Banker's Algorithm for Safe Sequence
    int count = 0;
    for (i = 0; i < n; i++)
        finish[i] = 0;

    while (count < n) {
        bool found = false;
        for (i = 0; i < n; i++) {
            if (finish[i] == 0) {
                bool canRun = true;
                for (j = 0; j < m; j++) {
                    if (need[i][j] > avail[j]) {
                        canRun = false;
                        break;
                    }
                }

                if (canRun) {
                    // This process can safely execute
                    for (k = 0; k < m; k++)
                        avail[k] += alloc[i][k];

                    safeSeq[count++] = i;
                    finish[i] = 1;
                    found = true;
                }
            }
        }

        if (!found) {
            printf("\n⚠️ Deadlock detected! System is NOT in a safe state.\n");
            printf("Processes that could not finish: ");
            for (i = 0; i < n; i++)
                if (!finish[i]) printf("P%d ", i);
            printf("\n");
            return 0;
        }
    }

    printf("\n✅ System is in a SAFE STATE.\nSafe Sequence: ");
    for (i = 0; i < n; i++)
        printf("P%d ", safeSeq[i]);
    printf("\n");

    // Free dynamically allocated memory
    for (i = 0; i < n; i++) {
        free(alloc[i]);
        free(max[i]);
        free(need[i]);
    }
    free(alloc);
    free(max);
    free(need);
    free(avail);
    free(finish);
    free(safeSeq);

    return 0;
}
